    <div class="form-container">
        <div class="form-box">
            <form method="post" action="/submit/add" enctype="multipart/form-data"></form>
                <br>
                Image:
                <input type="file" name="image" required>
                <br>
                Name of the item:
                <input type="text" name="name" required autofocus>
                <br>
                Carbohydrates:
                <input type="number" name="carbo" required>
                <br>
                Proteins:
                <input type="number" name="protein" required>
                <br>
                Fats:
                <input type="number" name="fat" required>
                <br>
                Calories:
                <input type="number" name="calorie" required>
                <br>
                <input type="submit" value="submit" required>
            </form>
        </div>
    </div>
